<div class="container mt-5">
    <div class="container-cursos d-flex flex-column align-items-center">
        <h1 class="text-center mb-4">Editar Curso</h1>
        <form action="/cursos/<%= curso.id_curso %>?_method=PUT" method="POST" class="w-50">
            <div class="form-group">
                <label for="codigo_ies">Código IES:</label>
                <input type="number" id="codigo_ies" name="codigo_ies" value="<%= curso.codigo_ies %>"
                    class="form-control" required>
            </div>
            <div class="form-group">
                <label for="nome_ies">Nome IES:</label>
                <input type="text" id="nome_ies" name="nome_ies" value="<%= curso.nome_ies %>" class="form-control"
                    required>
            </div>
            <div class="form-group">
                <label for="sigla_ies">Sigla IES:</label>
                <input type="text" id="sigla_ies" name="sigla_ies" value="<%= curso.sigla_ies %>" class="form-control"
