                <input type="number" id="vagas_autorizadas" name="vagas_autorizadas"
                    value="<%= curso.vagas_autorizadas %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="situacao">Situação:</label>
                <input type="text" id="situacao" name="situacao" value="<%= curso.situacao %>" class="form-control"
