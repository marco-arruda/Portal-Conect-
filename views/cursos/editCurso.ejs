                <input type="number" id="cpc" name="cpc" value="<%= curso.cpc %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="ano_cpc">Ano do CPC:</label>
                <input type="number" id="ano_cpc" name="ano_cpc" value="<%= curso.ano_cpc %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="enade">ENADE:</label>
                <input type="number" id="enade" name="enade" value="<%= curso.enade %>" class="form-control">
            </div>
            <div class="form-group">
                <label for="ano_enade">Ano do ENADE:</label>
                <input type="number" id="ano_enade" name="ano_enade" value="<%= curso.ano_enade %>"
